@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<h4>Books Collection</h4>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-3 mx-3 my-2 card" style="width: 18rem;">
            <img src="https://cdn.kobo.com/book-images/6267a139-f8ba-4820-9d6d-d97c7d75de66/1200/1200/False/rich-dad-poor-dad-34.jpg"
                class="card-img-top my-2" alt="@Html.DisplayFor(m=>item.Title)" width="50px" height="300px">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(m=>item.Title)</h5>
                <p class="card-text">This book is about human perception of money.</p>
                <a class="btn btn-primary" asp-controller="Books" asp-action="getBookDetailsById"
                    asp-route-itemid="@item.BookId">Buy</a>
            </div>
        </div>
    }
</div>